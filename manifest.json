{
   "manifest_version": 2,
   "name": "Copieur de ALT",
   "version": "1.0",
   "author": "Fabrice Simonet <fabrice@emulsion.io>",
   "homepage_url": "https://emulsion.io",
   "description": "Copie le texte alternatif d'une image",
   "permissions": ["contextMenus", "activeTab", "clipboardWrite", "tabs"],
   "background": {
       "scripts": ["background.js"],
       "persistent": false
   },
   "applications": {
       "gecko": {
           "id": "fabrice@emulsion.io"
       }
   },
   "icons": {
       "16": "icons/copy-alt-16.png",
       "32": "icons/copy-alt-32.png",
       "48": "icons/copy-alt-48.png",
       "96": "icons/copy-alt-96.png",
       "128": "icons/copy-alt-128.png"
   }
}
